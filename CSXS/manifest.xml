<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0"
    ExtensionBundleId="com.kureichi.discordrpc"
    ExtensionBundleVersion="1.0.0"
    ExtensionBundleName="Kureichi RPC">

  <ExtensionList>
    <Extension Id="com.kureichi.discordrpc.panel" Version="1.0.0"/>
    <Extension Id="com.kureichi.discordrpc.after-effect" Version="1.0.0"/>
    <Extension Id="com.kureichi.discordrpc.photoshop" Version="1.0.0"/>
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <Host Name="AEFT" Version="[0.0,99.9]"/>
      <Host Name="PHSP" Version="[0.0,99.9]"/>
      <Host Name="PHXS" Version="[0.0,99.9]"/>
    </HostList>
    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="8.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>

    <Extension Id="com.kureichi.discordrpc.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./panel/index.html</MainPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>Kureichi RPC</Menu>
          <Geometry>
            <Size>
              <Width>400</Width>
              <Height>300</Height>
            </Size>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>

    <Extension Id="com.kureichi.discordrpc.after-effect">
      <HostList>
        <Host Name="AEFT" />
      </HostList>
      <DispatchInfo>
        <Resources>
          <MainPath>./extension/index.html</MainPath>
          <ScriptPath>./jsx/AEFT.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--allow-file-access</Parameter>
            <Parameter>--allow-file-access-from-files</Parameter>
            <Parameter>--disable-application-cache</Parameter>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>false</AutoVisible>
          <StartOn>
            <Event>com.adobe.csxs.events.ApplicationInitialized</Event>
            <Event>applicationActivate</Event>
            <Event>com.adobe.csxs.events.ApplicationActivate</Event>
            <Event>com.adobe.events.flash.documentChanged</Event>
            <Event>com.kureichi.rpc.ready</Event>
          </StartOn>
        </Lifecycle>
        <UI>
          <Type>Custom</Type>
          <Geometry>
            <Size>
              <Width>500</Width>
              <Height>500</Height>
            </Size>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>

    <Extension Id="com.kureichi.discordrpc.photoshop">
      <HostList>
        <Host Name="PHSP" />
      </HostList>
      <DispatchInfo>
        <Resources>
          <MainPath>./extension/index.html</MainPath>
          <ScriptPath>./jsx/PHSP.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--allow-file-access</Parameter>
            <Parameter>--allow-file-access-from-files</Parameter>
            <Parameter>--disable-application-cache</Parameter>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>false</AutoVisible>
          <StartOn>
            <Event>com.adobe.csxs.events.ApplicationInitialized</Event>
            <Event>applicationActivate</Event>
            <Event>com.adobe.csxs.events.ApplicationActivate</Event>
            <Event>com.adobe.events.flash.documentChanged</Event>
            <Event>com.kureichi.rpc.ready</Event>
          </StartOn>
        </Lifecycle>
        <UI>
          <Type>Custom</Type>
          <Geometry>
            <Size>
              <Width>500</Width>
              <Height>500</Height>
            </Size>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>

    <Extension Id="com.kureichi.discordrpc.photoshop">
      <HostList>
        <Host Name="PHXS" />
      </HostList>
      <DispatchInfo>
        <Resources>
          <MainPath>./extension/index.html</MainPath>
          <ScriptPath>./jsx/PHXS.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--allow-file-access</Parameter>
            <Parameter>--allow-file-access-from-files</Parameter>
            <Parameter>--disable-application-cache</Parameter>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>false</AutoVisible>
          <StartOn>
            <Event>com.adobe.csxs.events.ApplicationInitialized</Event>
            <Event>applicationActivate</Event>
            <Event>com.adobe.csxs.events.ApplicationActivate</Event>
            <Event>com.adobe.events.flash.documentChanged</Event>
            <Event>com.kureichi.rpc.ready</Event>
          </StartOn>
        </Lifecycle>
        <UI>
          <Type>Custom</Type>
          <Geometry>
            <Size>
              <Width>500</Width>
              <Height>500</Height>
            </Size>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>

    
  </DispatchInfoList>

</ExtensionManifest>
